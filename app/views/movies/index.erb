<h1 class="text-center pt-2 pb-3"><%=session[:username]%>'s Movie collection</h1>

<a class="btn btn-success mb-3" href="/movies/new" role="button">Add Movie</a>
<a class="btn btn-danger mb-3" href="/logout" role="button">Logout</a>

<%@movies.each do |movie| %>
<h2>Title: <%=movie.title%></h2>
<h2>Director: <%=movie.director%></h2>
<h2>Genre: <%=movie.genre%></h2>
<a href="/movies/<%=movie.id%>/edit">Edit </a>

<form action="/movies/<%=movie.id%>" method="post">
<input type="hidden" id="hidden" name="_method" value="delete">
<input type="submit" value="Delete">
</form>
<%end%>